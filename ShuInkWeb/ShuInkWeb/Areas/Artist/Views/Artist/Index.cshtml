@model IEnumerable<AppointmentForCurrentArtistModel>

@{
    ViewBag.Title = "My Appointments";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientContact)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ClientContact)" class="fa fa-facebook-official"></a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Appointment" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-area="" asp-controller="Appointment" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-area="" asp-controller="Appointment" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
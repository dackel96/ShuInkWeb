<!DOCTYPE html>
<html lang="en">
<head>
    <meta image()"utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body class="bg-image"
      style="background-image: url('https://res.cloudinary.com/oldcapitalcloud/image/upload/v1670703435/blurlogooo_uu9eai.jpg');background-repeat: no-repeat; background-attachment: fixed;background-size: cover;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong bg-dark">
            <div class="container-fluid bg-dark">
                <a class="navbar-brand" asp-area="Artist" asp-controller="Artist" asp-action="Index">Old Capital</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Artist" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Blog" asp-action="All">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Appointment" asp-action="AllForMonth">Schedule</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        <li>Mail</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Artist" asp-controller="Artist" asp-action="AllMessages">Message's</a>
                        </li>
                        <li>Appointment Options</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Add">Add Appointment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="All">All Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Artist" asp-controller="Artist" asp-action="Index">My Appointments</a>
                        </li>
                        <li>Gallery Options</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Add">Add Photo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Artist" asp-controller="Artist" asp-action="MyPhotos">My Photos</a>
                        </li>
                        <li>Blog Options</li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Add">Add Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="All">All Posts</a>
                        </li>
                        <li>Shop Options</li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class="">
                        </div>
                    </div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class="">
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    @RenderBody()
                </div>
            </main>
        </div>

    </div>

    <footer class="footer mt-auto py-3 bg-dark">
        <div class="container">
            <span class="text-light"> &copy; @DateTime.Now.Year - Plzv Softwear Inc.</span>
            <a href="https://www.facebook.com/alexandar.spasov2" class="fa fa-facebook-official"></a>
            <a href="https://www.instagram.com/alexandarspasov/?hl=bg" class="fa fa-instagram"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
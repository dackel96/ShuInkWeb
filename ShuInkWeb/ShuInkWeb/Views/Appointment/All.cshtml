@model IEnumerable<AppointmentViewModel>


@{
    ViewBag.Title = "Appointments List";
}

<h2 class="text-center text-info">@ViewBag.Title</h2>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Start</th>
            <th scope="col">End</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@item.Title</td>
                <td>@item.Start</td>
                <td>@item.End</td>
            </tr>
        }
    </tbody>
</table>
@{
    this.ViewData["Title"] = "Home";
}
<div class="bg-black">
    <div class="col-lg-12" align="center">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/alwesomeTatto.jpg" width="1000" height="650" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/joypadSketch.jpg" width="1000" height="650" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/motionHandSketch.jpg" width="1000" height="650" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
@model IEnumerable<ImageViewModel>

@{
    ViewData["Title"] = "Welcome to Old Capital Tatto Shop";
    bool first = true;
}

<div class="text-center bg-dark rounded-bottom">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<div class="row-md-4 bg-dark rounded-3">
    <div class="col-lg-12" align="center">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    <div class="carousel-item @(first ? "active" : string.Empty)">
                        <img src="@item.ImageUrl" width="1000" height="650" class="shadow-1-strong rounded">
                    </div>
                    @(first = false)
                    ;
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
@model IEnumerable<AppointmentViewForClient>

@{
    ViewBag.Title = "My Appointment's";
}

<div class="text-center bg-dark rounded-bottom">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<div class="row-md-4 bg-dark rounded-3">
    <div class="col-md-4 offset-md-4">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Day</th>
                    <th scope="col">Start</th>
                    <th scope="col">End</th>
                    @*<th scope="col">ArtistName</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Day</th>
                        <td>@item.Start</td>
                        <td>@item.End</td>
                        @* <td>@item.ArtistName</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
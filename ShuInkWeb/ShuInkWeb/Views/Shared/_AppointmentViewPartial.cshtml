@model AppointmentViewModel
<hr />
<form method="post">
    <div class="mb-3 text-center">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input asp-for="@Model.Title" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.Description" class="form-label">Description</label>
        <textarea asp-for="@Model.Description" class="form-control text-bg-secondary" aria-required="true" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.FirstName" class="form-label">Client First Name</label>
        <input asp-for="@Model.FirstName" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.LastName" class="form-label">Client Last Name</label>
        <input asp-for="@Model.LastName" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.SocialMedia" class="form-label">Social Media Link</label>
        <input asp-for="@Model.SocialMedia" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="SocialMedia" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.PhoneNumber" class="form-label">Phone</label>
        <input asp-for="@Model.PhoneNumber" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.Start" class="form-label">When</label>
        <input type="datetime-local" asp-for="@Model.Start" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <label asp-for="@Model.Duration" class="form-label">Duration</label>
        <input asp-for="@Model.Duration" class="form-control text-bg-secondary" aria-required="true" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="mb-3 text-center">
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
</form>
<hr />
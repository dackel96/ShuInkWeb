<!DOCTYPE html>
<html lang="en">
<head>
    <meta image()"utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body class="bg-image"
      style="background-image: url('https://raw.githubusercontent.com/dackel96/ShuInkWeb/main/ShuInkWeb/ShuInkWeb/wwwroot/images/Abstract-backgroundBLur.jpg');
            background-attachment:fixed;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong bg-dark">
            <div class="container-fluid bg-dark">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Old Capital</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Artist" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Blog" asp-action="All">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Appointment" asp-action="AllForMonth">Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Shop" asp-controller="Home" asp-action="Index">Shop</a>
                        </li>
                        @if (this.User?.Identity?.IsAuthenticated ?? false && User.HasClaim(x => x.Type == "username"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Client" asp-action="Mine">My Appointments</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container opacity-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-dark">
        <div class="container">
            <span class="text-light"> &copy; @DateTime.Now.Year - Plzv Softwear Inc.</span>
            <a href="https://www.facebook.com/alexandar.spasov2" class="fa fa-facebook-official"></a>
            <a href="https://www.instagram.com/alexandarspasov/?hl=bg" class="fa fa-instagram"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
